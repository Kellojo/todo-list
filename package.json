{
  "name": "todo-list",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "npm run setup:pocketbase && concurrently \"npm run dev:sveltekit\" \"npm run dev:pocketbase\"",
    "dev:sveltekit": "vite dev",
    "dev:pocketbase": "node scripts/start-pocketbase.js",
    "setup:pocketbase": "node scripts/setup-pocketbase.js",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "test-e2e": "docker compose up --build -d && npx playwright test && docker compose down",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "devDependencies": {
    "@iconify/svelte": "^5.2.1",
    "@playwright/test": "^1.58.2",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.50.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/node": "^25.2.0",
    "concurrently": "^9.1.2",
    "svelte": "^5.48.2",
    "svelte-check": "^4.3.5",
    "typescript": "^5.9.3",
    "unzipper": "^0.12.3",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "pocketbase": "^0.26.8",
    "svelte-sonner": "^1.0.7"
  }
}
